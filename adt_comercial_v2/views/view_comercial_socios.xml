<odoo>
    <record id="adt_comercial_partner_v2_tree" model="ir.ui.view">
        <field name="name">adt.comercial.partner.v2.tree</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <tree string="Socio">
                <field name="codigo_socio"/>
                <field name="name"/>
                <field name="vat" string="Documento de identidad"/>
                <field name="l10n_latam_identification_type_id"/>
                <field name="phone"/>
                <field name="mobile"/>
                <field name="street" string="Dirección exacta"/>
                <field name="user_id" string="Asesor"/>
            </tree>
        </field>
    </record>

    <record id="adt_comercial_partner_v2_search" model="ir.ui.view">
        <field name="name">adt.comercial.partner.v2.search</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <search string="Search Partner">
                <field name="name" filter_domain="['|', '|', ('display_name', 'ilike', self), ('ref', '=', self), ('email', 'ilike', self)]"/>
                <field name="email" filter_domain="[('email', 'ilike', self)]"/>
                <field name="phone" filter_domain="['|', ('phone', 'ilike', self), ('mobile', 'ilike', self)]"/>
                <field name="user_id"/>
                <separator/>
                <group expand="0" name="group_by" string="Group By">
                    <filter name="salesperson" string="Asesor" domain="[]" context="{'group_by' : 'user_id'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <record id="adt_comercial_partner_v2_form" model="ir.ui.view">
        <field name="name">adt.comercial.partner.v2.form</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <form string="Socio">
                <header>
                </header>
                <sheet>
                    <div class="oe_title mb24">
                        <h1>
                            <field class="o_text_overflow" name="name" default_focus="1" placeholder="e.g. Juan Pérez" required="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="l10n_latam_identification_type_id" string="Tipo de documento" widget="radio" options="{'horizontal': true}"/>
                            <field name="vat" string="Documento de identidad" required="1"/>
                        </group>
                        <group>
                            <field name="codigo_socio" required="1"/>
                            <field name="phone"/>
                            <field name="mobile"/>
                            <field name="email"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="street" string="Dirección exacta"/>
                        </group>
                        <group>
                            <field name="user_id" string="Asesor"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="image_dni" widget="image"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_socios" model="ir.actions.act_window">
        <field name="name">Socios</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="adt_comercial_v2.adt_comercial_partner_v2_search"/>
        <field name="context">{'default_is_company': True}</field>
    </record>
    <record id="action_socios_view_tree" model="ir.actions.act_window.view">
        <field name="sequence" eval="1"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="adt_comercial_v2.adt_comercial_partner_v2_tree"/>
        <field name="act_window_id" ref="action_socios"/>
    </record>
    <record id="action_socios_view_form" model="ir.actions.act_window.view">
        <field name="sequence" eval="2"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="adt_comercial_v2.adt_comercial_partner_v2_form"/>
        <field name="act_window_id" ref="action_socios"/>
    </record>
    
    <menuitem name="Comercial v2" id="menu_adt_comercial" sequence="20" groups="group_access_adt_comercial_v2"/>
    <menuitem id="adt_comercial_menu_socios"
              name="Socios"
              action="action_socios"
              parent="menu_adt_comercial"
              sequence="2"/>
    
