<odoo>
    <record id="view_expediente_rechazo_wizard" model="ir.ui.view">
        <field name="name">expediente.rechazo.wizard</field>
        <field name="model">adt.expediente.rechazo.wizard</field>
        <field name="arch" type="xml">
            <form string="Rechazar expediente">
                <group>
                    <field name="fecha_rechazo"/>
                    <field name="motivo_rechazo"/>
                </group>
                <footer>
                    <button string="Confirmar rechazo" type="object" name="action_confirmar" class="btn-danger"/>
                    <button string="Cancelar" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>