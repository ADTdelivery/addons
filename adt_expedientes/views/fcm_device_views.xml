<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ========================================
         FCM DEVICE VIEWS
         ======================================== -->

    <!-- Tree View -->
    <record id="view_adt_fcm_device_tree" model="ir.ui.view">
        <field name="name">adt.fcm.device.tree</field>
        <field name="model">adt.fcm.device</field>
        <field name="arch" type="xml">
            <tree string="Dispositivos FCM">
                <field name="user_id"/>
                <field name="device_name"/>
                <field name="platform"/>
                <field name="device_os"/>
                <field name="app_version"/>
                <field name="active"/>
                <field name="last_seen"/>
                <field name="notification_count"/>
                <field name="last_notification_sent"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_adt_fcm_device_form" model="ir.ui.view">
        <field name="name">adt.fcm.device.form</field>
        <field name="model">adt.fcm.device</field>
        <field name="arch" type="xml">
            <form string="Dispositivo FCM">
                <header>
                    <button name="reactivate_device" string="Reactivar" type="object"
                            attrs="{'invisible': [('active', '=', True)]}"
                            class="oe_highlight"/>
                    <button name="deactivate_device" string="Desactivar" type="object"
                            attrs="{'invisible': [('active', '=', False)]}"
                            class="btn-warning"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" options="{'terminology': 'archive'}"/>
                        </button>
                    </div>

                    <group>
                        <group name="user_info" string="Usuario">
                            <field name="user_id"/>
                            <field name="platform"/>
                        </group>
                        <group name="device_info" string="Información del Dispositivo">
                            <field name="device_name"/>
                            <field name="device_id"/>
                            <field name="device_os"/>
                            <field name="app_version"/>
                        </group>
                    </group>

                    <group>
                        <group name="token_info" string="Token">
                            <field name="token" password="True"/>
                        </group>
                        <group name="stats" string="Estadísticas">
                            <field name="notification_count"/>
                            <field name="last_notification_sent"/>
                            <field name="created_at"/>
                            <field name="last_seen"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_adt_fcm_device_search" model="ir.ui.view">
        <field name="name">adt.fcm.device.search</field>
        <field name="model">adt.fcm.device</field>
        <field name="arch" type="xml">
            <search string="Buscar Dispositivos FCM">
                <field name="user_id"/>
                <field name="device_name"/>
                <field name="platform"/>

                <filter string="Activos" name="active" domain="[('active', '=', True)]"/>
                <filter string="Inactivos" name="inactive" domain="[('active', '=', False)]"/>

                <separator/>

                <filter string="Android" name="android" domain="[('platform', '=', 'android')]"/>
                <filter string="iOS" name="ios" domain="[('platform', '=', 'ios')]"/>
                <filter string="Web" name="web" domain="[('platform', '=', 'web')]"/>

                <group expand="0" string="Agrupar Por">
                    <filter string="Usuario" name="group_user" context="{'group_by': 'user_id'}"/>
                    <filter string="Plataforma" name="group_platform" context="{'group_by': 'platform'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_adt_fcm_device" model="ir.actions.act_window">
        <field name="name">Dispositivos FCM</field>
        <field name="res_model">adt.fcm.device</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No hay dispositivos FCM registrados
            </p>
            <p>
                Los dispositivos se registran automáticamente cuando la aplicación móvil
                se conecta y envía su token FCM.
            </p>
        </field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_adt_fcm_device"
              name="Dispositivos FCM"
              parent="base.menu_administration"
              action="action_adt_fcm_device"
              sequence="100"/>

</odoo>
