<odoo>

    <record id="view_adt_register_payment_form" model="ir.ui.view">
        <field name="name">adt.register.payment.form</field>
        <field name="model">adt.register.payment</field>
        <field name="arch" type="xml">
            <form string="Register Payment">
                <header>
                    <field name="company_id" invisible="1"/>
                    <field name="cuota_id" invisible="1"/>
                    <field name="payment_type" invisible="1"/>
                </header>

                <sheet>
                    <group>
                        <group>
                            <field name="journal_id" string="Diario"
                                   options="{'no_open': True, 'no_create': True}" required="1"/>
                            <field name="payment_date" string="Fecha"/>
                        </group>

                        <group>
                            <field name="amount" string="Monto" />
                            <field name="communication" string="# Operación"/>
                        </group>
                    </group>

                    <group string="Mora" attrs="{'invisible':[('mora','=',0),('mora','=',False)]}">
                        <group>
                            <field name="mora" string="Mora"/>
                            <field name="mora_dias" string="Días mora" readonly="1"/>
                        </group>
                        <group>
                            <field name="mora_state" string="Estado mora"/>
                        </group>
                    </group>

                </sheet>

                <footer>
                    <button string="Crear pago" name="action_create_payments" type="object" class="oe_highlight btn-primary"/>
                    <button string="Cancelar" class="btn btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="view_pagar_mora_wizard_form" model="ir.ui.view">
        <field name="name">adt.pagar.mora.wizard.form</field>
        <field name="model">adt.pagar.mora.wizard</field>
        <field name="arch" type="xml">
            <form string="Pagar mora">
                <group>
                    <field name="cuota_id" readonly="1"/>
                    <field name="amount"/>
                    <field name="payment_date"/>
                    <field name="journal_id"/>
                    <field name="mora_operacion"/>
                </group>

                <footer>
                    <button name="action_confirm_pagar_mora"
                            string="Confirmar pago"
                            type="object"
                            class="btn-primary"/>

                    <button string="Cancelar"
                            special="cancel"
                            class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>


    <record id="view_adt_moras_wizard_form" model="ir.ui.view">
        <field name="name">adt.moras.wizard.form</field>
        <field name="model">adt.moras.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="pagar_todo"/>
                    <field name="operacion_global" attrs="{'invisible':[('pagar_todo','=',False)]}"/>
                    <field name="payment_date"/>
                </group>

                <field name="line_ids">
                    <tree editable="bottom">
                        <field name="seleccionado"/>
                        <field name="cuota_id"/>
                        <field name="monto"/>
                        <field name="dias"/>

                        <!-- Campo operación por línea -->
                        <field name="operacion"
                            attrs="{'readonly':[('id','!=',False)]}"
                            column_invisible="context.get('pagar_todo_ctx')"/>
                    </tree>
                </field>

                <footer>
                    <button string="Pagar" type="object" name="action_pagar_moras" class="btn-primary"/>
                    <button string="Cancelar" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>